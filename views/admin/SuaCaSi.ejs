<%- include("../Header.ejs") %>
    <!-- Page Content  -->
    <div id="content-page" class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Chỉnh sửa thông tin ca sĩ</h4>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <form action="/admin/casi/suacasi" method="POST" enctype="multipart/form-data">
                                <input type="hidden" name="id" value="<%= data.id %>">

                                <div style="text-align: center;" class="form-group">
                                    <div class="add-img-user profile-img-edit">
                                        <img class="profile-pic img-fluid" src="<%= data.avatar %>" alt="">
                                        <div style="text-align: center;" class="p-image">
                                            <a required href="javascript:void();"
                                                class="upload-button btn iq-bg-primary">Tải
                                                ảnh</a>
                                            <input name="avatar" class="file-upload" type="file" accept="image/*">
                                            <input type="hidden" name="url_avatar" value="<%= data.avatar %>">
                                        </div>
                                    </div>
                                    <div class="img-extension mt-3">
                                        <div class="d-inline-block align-items-center">
                                            <span>Định dạng hợp lệ: </span>
                                            <a href="javascript:void();">.jpg</a>
                                            <a href="javascript:void();">.png</a>
                                            <a href="javascript:void();">.jpeg</a>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Tên:</label>
                                    <input value="<%= data.tencs %>" name="tencs" required type="text"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Ngày sinh:</label>
                                    <input value="<%= moment(data.ngaysinh).format('YYYY-MM-DD') %>" name="ngaysinh"
                                        required class="form-control" type="date" id="example-date">
                                </div>
                                <div class="form-group">
                                    <label>Mô tả:</label>
                                    <textarea name="mota" class="form-control" rows="4"><%= data.mota %></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                                <button type="reset" class="btn btn-danger">Clear</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Wrapper END -->
    <%- include("../Footer.ejs") %>