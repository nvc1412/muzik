<%- include("../Header.ejs") %>

    <!-- Page Content  -->
    <div id="content-page" class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Danh sách thể loại</h4>
                            </div>
                            <div class="iq-card-header-toolbar d-flex align-items-center">
                                <a href="/admin/theloai/themtheloai" class="btn btn-primary">+ Thêm mới</a>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <div class="table-responsive">
                                <table class="data-tables table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th width="5%">ID</th>
                                            <th width="20%">Thể loại</th>
                                            <th width="65%">Mô tả</th>
                                            <th width="10%">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (var i=0; i < data.length; i++) { %>
                                            <tr>
                                                <td>
                                                    <%=data[i].id%>
                                                </td>
                                                <td>
                                                    <%=data[i].theloai%>
                                                </td>
                                                <td>
                                                    <p class="mb-0">
                                                        <%=data[i].mota%>
                                                    </p>
                                                </td>
                                                <td>
                                                    <div class="flex align-items-center list-user-action">
                                                        <a class="bg-primary" data-toggle="tooltip" data-placement="top"
                                                            title="" data-original-title="Sửa"
                                                            href="/admin/theloai/suatheloai/<%=data[i].id%>"><i
                                                                class="ri-pencil-line"></i></a>
                                                        <a class="bg-primary" data-toggle="tooltip" data-placement="top"
                                                            title="" data-original-title="Xóa"
                                                            href="/admin/theloai/xoatheloai/<%=data[i].id%>"><i
                                                                class="ri-delete-bin-line"></i></a>
                                                    </div>
                                                </td>
                                                <% } %>
                                            </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Wrapper END -->
    <%- include("../Footer.ejs") %>